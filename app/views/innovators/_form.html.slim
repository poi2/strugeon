- end_year = Time.current.year
- start_year = end_year - 100

= form_for @innovator do |f|
  - if @innovator.errors.any?
    #error_explanation
      h2 = "#{pluralize(@innovator.errors.count, "error")} prohibited this innovator from being saved:"
      ul
        - @innovator.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation
  .field
    = f.label :birth
    = f.date_select :birth, start_year: start_year, end_year: end_year
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :url
    = f.text_field :url
  .actions = f.submit
